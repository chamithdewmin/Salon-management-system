<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000.0" prefWidth="1500.0" stylesheets="@../CSS/Dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salon.Controller.DashboardController">

    <!-- Pie Chart Panel -->
    <AnchorPane layoutX="935.0" layoutY="519.0" prefHeight="382.0" prefWidth="502.0" style="-fx-background-color: #1A1A1A; -fx-background-radius: 30px;">
        <PieChart fx:id="PieChart" layoutX="14.0" layoutY="22.0" prefHeight="334.0" prefWidth="475.0" />
    </AnchorPane>

    <!-- Payment Panel -->
    <AnchorPane layoutX="52.0" layoutY="235.0" prefHeight="675.0" prefWidth="800.0" style="-fx-background-color: #1A1A1A; -fx-background-radius: 30px;">

        <!-- Customer Name -->
        <ComboBox fx:id="customerNameComboBox" editable="true" layoutX="67.0" layoutY="116.0" prefHeight="46.0" prefWidth="244.0" promptText="Customer Name" />

        <!-- Service Selection -->
        <ComboBox fx:id="serviceComboBox" layoutX="67.0" layoutY="190.0" prefHeight="43.0" prefWidth="244.0" promptText="Select Service" />

        <!-- Add Service Button -->
        <Button fx:id="addServiceButton" layoutX="67.0" layoutY="281.0" onAction="#handleAddService" prefHeight="40.0" prefWidth="128.0" text="Add Service" />

        <!-- Selected Services List -->
        <ListView fx:id="selectedServiceList" layoutX="540.0" layoutY="109.0" prefHeight="501.0" prefWidth="218.0" />

        <!-- Total Amount -->
        <TextField fx:id="totalAmountField" editable="false" layoutX="67.0" layoutY="361.0" prefHeight="46.0" prefWidth="244.0" promptText="Total Amount" />

        <!-- Cash Given -->
        <TextField fx:id="cashGivenField" layoutX="67.0" layoutY="425.0" onKeyReleased="#calculateBalance" prefHeight="46.0" prefWidth="244.0" promptText="Cash Given" />

        <!-- Change to Return -->
        <TextField fx:id="changeField" editable="false" layoutX="67.0" layoutY="489.0" prefHeight="46.0" prefWidth="244.0" promptText="Change to Return" />
   
       <!-- Add Payment Button -->
       <Button fx:id="addPaymentButton" layoutX="67.0" layoutY="565.0" onAction="#handleAddPayment" prefHeight="40.0" prefWidth="244.0" text="Add Payment" />
      <Label layoutX="67.0" layoutY="14.0" prefHeight="21.0" prefWidth="93.0" text="Add Payment" />

    </AnchorPane>

     <!-- Refresh Button -->
     <Button fx:id="refreshButton" layoutX="1201.0" layoutY="49.0" onAction="#handleRefresh" prefHeight="40.0" prefWidth="128.0" text="Refresh" />

     <!-- SAVED Block -->
     <AnchorPane layoutX="565.0" layoutY="26.0" prefHeight="125.0" prefWidth="220.0" styleClass="savedBox" stylesheets="@../CSS/Dashboard.css">
         <Label layoutX="14.0" layoutY="6.0" styleClass="label-title" text="Net Savings" />
         <Label fx:id="saved_value" layoutX="20.0" layoutY="25.0" prefHeight="75.0" prefWidth="180.0" styleClass="savedValue" />
     </AnchorPane>

     <!-- INCOME Block -->
     <AnchorPane layoutX="52.0" layoutY="26.0" prefHeight="125.0" prefWidth="220.0" styleClass="incomeBox">
         <Label layoutX="14.0" layoutY="6.0" styleClass="label-title" text="Total Income" />
         <Label fx:id="income_value" layoutX="20.0" layoutY="25.0" prefHeight="75.0" prefWidth="180.0" styleClass="incomeValue" />
     </AnchorPane>

     <!-- EXPENSES Block -->
     <AnchorPane layoutX="309.0" layoutY="26.0" prefHeight="125.0" prefWidth="220.0" styleClass="expensesBox">
         <Label layoutX="14.0" layoutY="6.0" styleClass="label-title" text="Total Expenses" />
         <Label fx:id="expenses_value" layoutX="20.0" layoutY="25.0" prefHeight="75.0" prefWidth="180.0" styleClass="expensesValue" />
     </AnchorPane>

</AnchorPane>
