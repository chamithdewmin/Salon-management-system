<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="850.0" prefWidth="1500.0" stylesheets="@../CSS/Dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salon.Controller.DashboardController">

    <!-- Pie Chart Panel -->
    <AnchorPane layoutX="895.0" layoutY="405.0" prefHeight="410.0" prefWidth="547.0" style="-fx-background-color: #1A1A1A; -fx-background-radius: 30px;">
        <PieChart fx:id="PieChart" layoutX="22.0" layoutY="20.0" prefHeight="376.0" prefWidth="513.0" />
    </AnchorPane>

    <!-- Payment Panel -->
    <AnchorPane layoutX="52.0" layoutY="220.0" prefHeight="595.0" prefWidth="800.0" style="-fx-background-color: #1A1A1A; -fx-background-radius: 30px;">

        <!-- Customer Name -->
        <ComboBox fx:id="customerNameComboBox" editable="true" layoutX="83.0" layoutY="40.0" prefHeight="46.0" prefWidth="244.0" promptText="Customer Name" />

        <!-- Service Selection -->
        <ComboBox fx:id="serviceComboBox" layoutX="83.0" layoutY="100.0" prefHeight="43.0" prefWidth="244.0" promptText="Select Service" />

        <!-- Add Service Button -->
        <Button fx:id="addServiceButton" layoutX="83.0" layoutY="177.0" onAction="#handleAddService" prefHeight="40.0" prefWidth="128.0" text="Add Service" />

        <!-- Selected Services List -->
        <ListView fx:id="selectedServiceList" layoutX="527.0" layoutY="28.0" prefHeight="350.0" prefWidth="235.0" />

        <!-- Total Amount -->
        <TextField fx:id="totalAmountField" editable="false" layoutX="83.0" layoutY="280.0" prefHeight="46.0" prefWidth="244.0" promptText="Total Amount" />

        <!-- Cash Given -->
        <TextField fx:id="cashGivenField" layoutX="83.0" layoutY="340.0" onKeyReleased="#calculateBalance" prefHeight="46.0" prefWidth="244.0" promptText="Cash Given" />

        <!-- Change to Return -->
        <TextField fx:id="changeField" editable="false" layoutX="83.0" layoutY="400.0" prefHeight="46.0" prefWidth="244.0" promptText="Change to Return" />
   
       <!-- Add Payment Button -->
       <Button fx:id="addPaymentButton" layoutX="166.0" layoutY="517.0" onAction="#handleAddPayment" prefHeight="40.0" prefWidth="244.0" text="Add Payment" />

    </AnchorPane>

     <!-- Refresh Button -->
     <Button fx:id="refreshButton" layoutX="1332.0" layoutY="31.0" onAction="#handleRefresh" prefHeight="40.0" prefWidth="128.0" text="Refresh" />

</AnchorPane>
