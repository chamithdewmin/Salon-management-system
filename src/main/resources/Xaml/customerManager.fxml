<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="850.0" prefWidth="1500.0" stylesheets="@../CSS/Task.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.salon.Controller.CustomerController">

    <!-- Heading -->
    <Label layoutX="50.0" layoutY="30.0" styleClass="task-title" text="ðŸ‘¤ Add New Customer" />

    <!-- Name -->
