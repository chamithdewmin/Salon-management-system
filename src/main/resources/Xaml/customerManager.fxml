    <!-- Customer Table -->
    <TableView fx:id="customerTable" layoutX="564.0" layoutY="121.0" prefHeight="677.0" prefWidth="891.0">
        <columns>
            <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="phoneCol" prefWidth="150.0" text="Phone" />
            <TableColumn fx:id="emailCol" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="genderCol" prefWidth="100.0" text="Gender" />
            <TableColumn fx:id="joinDateCol" prefWidth="150.0" text="Join Date" />
        </columns>
    </TableView>

</AnchorPane>
