    <!-- Phone -->
    <Label layoutX="57.0" layoutY="160.0" text="Phone:" />
    <TextField fx:id="phoneField" layoutX="180.0" layoutY="155.0" prefWidth="300.0" promptText="Enter phone number" />

    <!-- Email -->
    <Label layoutX="57.0" layoutY="220.0" text="Email:" />
    <TextField fx:id="emailField" layoutX="180.0" layoutY="215.0" prefWidth="300.0" promptText="Enter email address" />

    <!-- Gender -->
    <Label layoutX="57.0" layoutY="280.0" text="Gender:" />
