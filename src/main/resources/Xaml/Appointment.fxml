   <TextField fx:id="clientName" layoutX="87.0" layoutY="320.0" prefHeight="49.0" prefWidth="249.0" promptText="Client Name" styleClass="desTxt" />

   <TextField fx:id="clientContact" layoutX="87.0" layoutY="380.0" prefHeight="49.0" prefWidth="249.0" promptText="Contact Number" styleClass="rsTxt" />

   <ComboBox fx:id="serviceTypeCombo" layoutX="87.0" layoutY="440.0" prefHeight="49.0" prefWidth="249.0" promptText="Service Type" styleClass="Cat" />

   <ComboBox fx:id="ampmCombo" layoutX="345.0" layoutY="260.0" prefHeight="49.0" prefWidth="80.0" promptText="AM/PM" />

