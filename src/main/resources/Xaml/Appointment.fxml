         <TableColumn fx:id="colDate" prefWidth="162.0" text="Date" />
         <TableColumn fx:id="colTime" prefWidth="128.0" text="Time" />
         <TableColumn fx:id="colClientName" prefWidth="201.0" text="Client" />
         <TableColumn fx:id="colContact" prefWidth="151.0" text="Contact" />
         <TableColumn fx:id="colService" prefWidth="147.0" text="Service" />
         <TableColumn fx:id="colStaff" prefWidth="134.0" text="Staff" />
         <TableColumn fx:id="colAppointmentType" prefWidth="150.0" text="Type" />

      </columns>
   </TableView>
   <Button layoutX="216.0" layoutY="689.0" onAction="#handleDelete" prefHeight="45.0" prefWidth="120.0" text="Delete" />
   <Label layoutX="52.0" layoutY="47.0" styleClass="task-title" text="Add New Appointment" />
   <ComboBox fx:id="dateCombobox" layoutX="1142.0" layoutY="23.0" prefHeight="49.0" prefWidth="249.0" promptText="Search by date " styleClass="Cat" />
   <TextField fx:id="serchClinetNameTxt" layoutX="853.0" layoutY="23.0" prefHeight="49.0" prefWidth="249.0" promptText="Search by Client Name" styleClass="desTxt" />
   <ComboBox layoutX="87.0" layoutY="500.0" prefHeight="49.0" prefWidth="249.0" promptText="Staff Name :" />
   <ComboBox layoutX="87.0" layoutY="563.0" prefHeight="49.0" prefWidth="249.0" promptText="Type" />

