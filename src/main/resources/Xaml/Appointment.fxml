<AnchorPane prefHeight="1000.0" prefWidth="1600.0" styleClass="root" stylesheets="@../CSS/All.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salon.Controller.AppointmentController">

   <!-- Form Inputs -->
