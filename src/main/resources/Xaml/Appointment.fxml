   <ComboBox fx:id="appointmentTypeCombo" layoutX="87.0" layoutY="563.0" prefHeight="49.0" prefWidth="249.0" promptText="Appointment Type (Walk-in/Wedding)" />


   <!-- TableView Section -->
   <TableView fx:id="appointmentTable" layoutX="461.0" layoutY="106.0" prefHeight="846.0" prefWidth="1097.0">
