<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="850.0" prefWidth="1500.0" stylesheets="@../CSS/sms.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salon.Controller.SmsSenderController">

    <!-- Send to All Radio -->
    <RadioButton fx:id="selectAllRadio" layoutX="144.0" layoutY="231.0" onAction="#toggleAllContacts" text="Select All Customers" />

    <!-- Mobile Number Field -->
    <TextField fx:id="numberTxt" layoutX="148.0" layoutY="301.0" prefHeight="52.0" prefWidth="261.0" promptText="Number :" />

    <!-- Message Input -->
    <TextArea fx:id="massageTxt" layoutX="144.0" layoutY="387.0" prefHeight="232.0" prefWidth="512.0" promptText="Message :" styleClass="text-field" />

    <!-- Send Button -->
    <Button fx:id="sendButton" layoutX="144.0" layoutY="648.0" onAction="#sendSms" prefHeight="52.0" prefWidth="134.0" text="Send" />

</AnchorPane>
