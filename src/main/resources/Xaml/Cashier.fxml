<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000.0" prefWidth="1600.0" stylesheets="@../CSS/All.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salon.Controller.CashierController">

   <children>
      <ComboBox fx:id="customerNameComboBox" layoutX="60.0" layoutY="53.0" prefHeight="73.0" prefWidth="285.0" promptText="Customer Name :" />
      <TextField fx:id="phoneNumberTxt" layoutX="372.0" layoutY="53.0" prefHeight="73.0" prefWidth="285.0" promptText="Phone Number :" />

      <ComboBox fx:id="serviceComboBox" layoutX="682.0" layoutY="53.0" prefHeight="73.0" prefWidth="285.0" promptText="Select Service :" />
      <ComboBox fx:id="staffComboBox" layoutX="993.0" layoutY="53.0" prefHeight="73.0" prefWidth="285.0" promptText="Staff Member :" />

      <Button fx:id="addServiceButton" layoutX="1351.0" layoutY="57.0" onAction="#handleAddService" prefHeight="66.0" prefWidth="128.0" text="Add Service" />

      <TableView fx:id="paymentSummaryTable" layoutX="60.0" layoutY="193.0" prefHeight="378.0" prefWidth="1216.0">
         <columns>
            <TableColumn fx:id="colAmount1" prefWidth="180.0" text="Date" />
            <TableColumn fx:id="colCustomerName" prefWidth="180.0" text="Customer Name" />
            <TableColumn fx:id="colService" prefWidth="180.0" text="Services" />
            <TableColumn fx:id="colStaff" prefWidth="180.0" text="Staff Member" />
            <TableColumn fx:id="colAmount" prefWidth="180.0" text="Amount" />
            <TableColumn fx:id="colDescription" prefWidth="331.0" text="Description" />
         </columns>
      </TableView>

      <RadioButton fx:id="addDescriptionRadio" layoutX="1302.0" layoutY="205.0" onAction="#toggleDescription" text="Add Description" />
      <TextField fx:id="descriptionTxt" layoutX="1302.0" layoutY="248.0" prefHeight="73.0" prefWidth="269.0" promptText="Description :" visible="false" />

      <TextField fx:id="totalAmountField" editable="false" layoutX="1032.0" layoutY="613.0" prefHeight="46.0" prefWidth="244.0" promptText="Total Amount" />
      <TextField fx:id="cashGivenField" layoutX="1032.0" layoutY="677.0" onKeyReleased="#calculateBalance" prefHeight="46.0" prefWidth="244.0" promptText="Cash Given" />
      <TextField fx:id="changeField" editable="false" layoutX="1032.0" layoutY="741.0" prefHeight="46.0" prefWidth="244.0" promptText="Change to Return" />

      <Button fx:id="addPaymentButton" layoutX="1032.0" layoutY="817.0" onAction="#handleAddPayment" prefHeight="40.0" prefWidth="244.0" text="Add Payment" />
      <Button fx:id="refreshButton" layoutX="60.0" layoutY="922.0" onAction="#handleRefresh" prefHeight="40.0" prefWidth="128.0" text="Refresh" />
   </children>
</AnchorPane>
